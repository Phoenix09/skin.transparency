<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<animation effect="fade" time="400">WindowOpen</animation>
	<animation effect="fade" time="300">WindowClose</animation>
	<controls>
		<control type="group">
			<include>PageFade</include>
			<animation effect="fade" start="100" end="0" time="300" condition="Window.Next(Home)">Conditional</animation>
			<left>0</left>
			<top>0</top>
			<visible>Player.HasAudio</visible>
			<control type="button">
				<left>1887</left>
				<top>873</top>
				<width>30</width>
				<height>30</height>
				<texturefocus>close-window-focus.png</texturefocus>
				<texturenofocus>close-window-nofocus.png</texturenofocus>
				<onclick>Dialog.Close(musicosd)</onclick>
				<visible>Skin.HasSetting(TouchScreenMode)</visible>
			</control>
			<control type="group">
				<top>780</top>
				<control type="progress">
					<description>Progressbar</description>
					<left>662</left>
					<top>210</top>
					<width>1095</width>
					<height>22</height>
					<info>Player.Progress</info>
				</control>
				<control type="slider" id="888">
					<description>Slider</description>
					<left>662</left>
					<top>210</top>
					<width>1095</width>
					<height>22</height>
					<action>seek</action>
				</control>
			</control>
			<control type="list" id="9000">
				<left>540</left>
				<top>1020</top>
				<width>585</width>
				<height>58</height>
				<orientation>horizontal</orientation>
				<onleft>noop</onleft>
				<onright>9001</onright>
				<itemlayout width="65" height="58">
					<control type="image">
						<left>5</left>
						<top>5</top>
						<width>48</width>
						<height>48</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
				</itemlayout>
				<focusedlayout width="65" height="58">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>58</width>
						<height>58</height>
						<texture colordiffuse="darkcolor">circle-small.png</texture>
						<visible>Control.HasFocus(9000)</visible>
					</control>
					<control type="image">
						<left>5</left>
						<top>5</top>
						<width>48</width>
						<height>48</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
				</focusedlayout>
				<content>
					<item id="1">
						<icon>player-previous.png</icon>
						<onclick>PlayerControl(previous)</onclick>
					</item>
					<item id="2">
						<icon>player-rewind.png</icon>
						<onclick>PlayerControl(rewind)</onclick>
					</item>
					<item id="3">
						<icon>$VAR[PlayerPlayIcon]</icon>
						<onclick>PlayerControl(play)</onclick>
					</item>
					<item id="4">
						<icon>player-forward.png</icon>
						<onclick>PlayerControl(forward)</onclick>
					</item>
					<item id="5">
						<icon>player-next.png</icon>
						<onclick>PlayerControl(next)</onclick>
					</item>
					<item id="6">
						<icon>player-stop.png</icon>
						<onclick>PlayerControl(stop)</onclick>
					</item>
					<item id="7">
						<icon>$VAR[PlayerRepeatIcon]</icon>
						<onclick>PlayerControl(repeat)</onclick>
					</item>
					<item id="8">
						<icon>$VAR[PlayerRandomIcon]</icon>
						<onclick>PlayerControl(random)</onclick>
					</item>
					<item id="9">
						<icon>$VAR[PlayerRecordIcon]</icon>
						<onclick>PlayerControl(record)</onclick>
					</item>
				</content>
			</control>
			<control type="list" id="9001">
				<left>1505</left>
				<top>1020</top>
				<width>390</width>
				<height>58</height>
				<orientation>horizontal</orientation>
				<animation effect="slide" start="0,0" end="65,0" time="0" condition="!System.HasAddon(script.cu.lrclyrics)">Conditional</animation>
				<animation effect="slide" start="0,0" end="65,0" time="0" condition="![MusicPlayer.Content(LiveTV) + RDS.HasRadiotextPlus]">Conditional</animation>
				<onleft>9000</onleft>
				<onright>noop</onright>
				<itemlayout width="65" height="58">
					<control type="image">
						<left>5</left>
						<top>5</top>
						<width>48</width>
						<height>48</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
				</itemlayout>
				<focusedlayout width="65" height="58">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>58</width>
						<height>58</height>
						<texture colordiffuse="darkcolor">circle-small.png</texture>
						<visible>Control.HasFocus(9001)</visible>
					</control>
					<control type="image">
						<left>5</left>
						<top>5</top>
						<width>48</width>
						<height>48</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
				</focusedlayout>
				<content>
					<item id="1">
						<icon>player-rds.png</icon>
						<onclick>ActivateWindow(PVRRadioRDSInfo)</onclick>
						<visible>MusicPlayer.Content(LiveTV) + RDS.HasRadiotextPlus</visible>
					</item>
					<item id="2">
						<icon>player-subs.png</icon>
						<onclick>RunScript(script.cu.lrclyrics)</onclick>
						<onclick>Dialog.Close(musicosd)</onclick>
						<visible>System.HasAddon(script.cu.lrclyrics)</visible>
					</item>
					<item id="3">
						<icon>player-vis-select.png</icon>
						<onclick>Addon.Default.Set(xbmc.player.musicviz)</onclick>
					</item>
					<item id="4">
						<icon>player-vis-settings.png</icon>
						<onclick>Addon.Default.OpenSettings(xbmc.player.musicviz)</onclick>
					</item>
					<item id="5">
						<icon>player-vis-presets.png</icon>
						<onclick>ActivateWindow(VisualisationPresetList)</onclick>
					</item>
					<item id="6">
						<icon>player-audio.png</icon>
						<onclick>ActivateWindow(1114)</onclick>
					</item>
				</content>
			</control>
		</control>
	</controls>
</window>
