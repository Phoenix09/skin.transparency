			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>96</width>
				<height>72</height>
				<texture fallback="mediaflag-audiocodec.png">flags/music/audiocodec/$INFO[MusicPlayer.Codec,,.png]</texture>
			</control>
			<!-- Record Label -->
			<control type="image">
				<left>102</left>
				<top>0</top>
				<width>96</width>
				<height>72</height>
