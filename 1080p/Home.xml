<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">5040</defaultcontrol>
	<controls>
		<include>DefaultBackground</include>
		<control type="group">
			<control type="group">
				<include condition="!Skin.HasSetting(HideHomeWidgets)">HomeWidgets</include>
				<control type="button">
					<description>Show touchscreen submenu button</description>
					<left>360</left>
					<top>75</top>
					<width>375</width>
					<height>930</height>
					<label></label>
					<font></font>
					<texturefocus></texturefocus>
					<texturenofocus></texturenofocus>
					<onfocus>SetFocus(8001)</onfocus>
					<onclick>SetFocus(8001)</onclick>
					<visible>Skin.HasSetting(TouchScreenMode)</visible>
				</control>
				<control type="group" id="9000">
					<left>0</left>
					<top>0</top>
					<height>1080</height>
					<width>2082</width>
					<include>HomeMenu</include>
				</control>
				<include condition="!Skin.HasSetting(HideWeatherIcon)">Home_Top_Weather_Icon</include>
			</control>
			<control type="group">
				<include>Window_OpenClose_Header_Animation</include>
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>1920</width>
					<height>50</height>
					<texture border="1">header.png</texture>
				</control>
				<control type="image">
					<left>20</left>
					<top>5</top>
					<width>146</width>
					<height>40</height>
					<texture>logo.png</texture>
				</control>
				<control type="grouplist">
					<orientation>horizontal</orientation>
					<itemgap>18</itemgap>
					<align>right</align>
					<top>10</top>
					<width>1900</width>
					<control type="group">
						<width>36</width>
						<height>36</height>
						<control type="image">
							<top>-3</top>
							<width>36</width>
							<height>36</height>
							<texture>volume-panel.png</texture>
							<visible>Player.Muted</visible>
						</control>
					</control>
					<control type="label">
						<description>date label</description>
						<width min="15" max="750">auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<font>font-20</font>
						<textcolor>white</textcolor>
						<label>$VAR[DateTime]</label>
					</control>
					<control type="button" id="20">
						<description>Power push button</description>
						<width>30</width>
						<height>30</height>
						<label></label>
						<font></font>
						<texturenofocus>home-power.png</texturenofocus>
						<texturefocus colordiffuse="color">home-power.png</texturefocus>
						<pulseonselect>true</pulseonselect>
						<onleft>10</onleft>
						<onright>10</onright>
						<onup>9000</onup>
						<ondown>9000</ondown>
						<onclick>ActivateWindow(ShutdownMenu)</onclick>
					</control>
				</control>
			</control>
			<include condition="system.getbool(lookandfeel.enablerssfeeds)">RSS</include>
		</control>
		<include condition="Skin.HasSetting(TouchScreenMode)">TouchScreenControlsHome</include>
		<include>ContentFade</include>
	</controls>
</window>
